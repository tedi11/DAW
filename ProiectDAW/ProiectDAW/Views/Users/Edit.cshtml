@model ProiectDAW.Models.AppUser

@using (Html.BeginForm(actionName: "Edit", controllerName: "Users",
       method: FormMethod.Post, routeValues: new { id = @Model.Id }))
{

    <i class="bi bi-person"></i>
    @Html.Label("UserName", "Username", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.UserName)

    <br />

    <i class="bi bi-envelope"></i>
    @Html.Label("Email", "Email", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.Email)

    <br />

    <i class="bi bi-phone"></i>
    @Html.Label("PhoneNumber", "Phone number")

    <br />

    @Html.EditorFor(m => m.PhoneNumber)

    <br />
 
    <i class="bi bi-card-list"></i>
    <label>Select user role</label>
    @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", ViewBag.UserRole), null, new { @class = "form-control" })

    <br />

    <button class="btn btn-sm btn-success" type="submit">Editare user</button>


}